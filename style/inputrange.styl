@import "../../../theme/__init.styl"
@import "../../../style/__vendor.styl"

INPUT = 24px

[data-atom-input="inputrange"]
  position: relative
  height: 2.7rem
  padding: 0px !important
  background-color: transparent !important
  box-shadow none !important
  overflow: hidden
  > div
    position: relative
    top: (INPUT / 2)
    width: 100%
    height: HEIGHT = 2px
    background-color: #ccc
    box-shadow 0 0 0 4px rgba(0,0,0,0.05)

    > *
      position: absolute

    > div
      left: 0px
      right: 0px
      height: inherit
      background-color: THEME

    > span
      width: INPUT
      height: INPUT
      top: - ((INPUT / 2) - (HEIGHT / 2))
      background-color: #eee
      box-shadow inset 0 0 0 1px #ccc
      border-radius: .1rem
      &.min
        left: 0px
      &.max
        right: 0px
        margin-right: INPUT
        transform translateX(-(INPUT))
  > label
    position: absolute
    bottom: 0px
    padding: 0 .1rem
    font-size: FONT_SIZE_TINY
    font-weight: FONT_WEIGHT_BOLD
    > small
      margin-left: .1rem
      opacity: 0.75
      vertical-align: inherit
    &:nth-child(2)
      left: 0px
    &:nth-child(3)
      right: 0px

